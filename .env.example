DATABASE_URL="file:./dev.db"
YOUTUBE_API_KEY=tu_api_key_aqui

# Secret para proteger el endpoint de cron (/api/cron/sync)
CRON_SECRET=tu_secret_aleatorio_aqui

# ===========================================
# Autenticacion JWT
# ===========================================

# Email del unico usuario autorizado
AUTH_EMAIL=tu@email.com

# Hash bcrypt de la contrasena (generar con: bun run scripts/generate-password-hash.ts <contrasena>)
AUTH_PASSWORD_HASH=$2b$10$igLXoPvBVq32ifKz8/6Bue4vgXcXZ9ItSuLCfotNr5nEY588WIklm

# Secreto para firmar JWT (minimo 32 caracteres, generar con: openssl rand -base64 32)
AUTH_SECRET=tu_secreto_super_seguro_de_32_chars_minimo

# Duracion de la sesion en dias (opcional, default 7)
AUTH_SESSION_DAYS=7

# ===========================================
# Audio Cache (Offline Mode)
# ===========================================

# Directorio para almacenar archivos de audio descargados
# Produccion (EC2): /home/ec2-user/audio-cache
# Desarrollo (local): ./audio-cache
AUDIO_CACHE_DIR=./audio-cache

# Limite maximo de espacio en disco para cache de audio (en GB)
MAX_AUDIO_CACHE_GB=5

# ===========================================
# yt-dlp Configuration
# ===========================================

# Ruta al binario de yt-dlp (opcional)
# YT_DLP_PATH=/home/ec2-user/.local/bin/yt-dlp

# Ruta al archivo de cookies de YouTube (opcional)
# YT_DLP_COOKIES_PATH=/home/ec2-user/cookies_youtube.txt
